<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        tools:context=".ui.menu.MenuActivity">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tviewPersistences"
            android:text="PersistÃªncia"
            android:gravity="center"
            android:layout_margin="16dp"
            app:layout_constraintTop_toTopOf="parent"
    />

    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnSharePrefs"
            android:text="Shared Preference"
            app:layout_constraintTop_toBottomOf="@id/tviewPersistences"
    />

    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnDB"
            android:text="Banco de Dados"
            app:layout_constraintTop_toBottomOf="@id/btnSharePrefs"
    />

    <TextView
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:id="@+id/separator"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toBottomOf="@id/btnDB"
    />

    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnClose"
            android:text="Fechar"
            app:layout_constraintTop_toBottomOf="@id/separator"
    />

</androidx.constraintlayout.widget.ConstraintLayout>